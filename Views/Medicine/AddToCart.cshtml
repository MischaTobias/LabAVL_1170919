@model LabAVL_1170919.Models.TreeMedicine

@{
    ViewBag.Title = "AddToCart";
}

<h2>Add this item to your cart</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @*@Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label>Input the quantity of items you desire to add to your cart</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Stock, new { htmlAttributes = new { @class = "form-control" } })
                <font color="red"><strong>@Html.ValidationMessageFor(model => model.Stock)</strong></font> 
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ShowMedList")
</div>
